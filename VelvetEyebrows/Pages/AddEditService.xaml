<Page x:Class="VelvetEyebrows.Pages.AddEditService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VelvetEyebrows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditService">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <TextBlock Text="Название:"/>
            <TextBox Name="tbTitle" Text="{Binding Title}"/>

            <TextBlock Text="Цена:"/>
            <TextBox Name="tbCost" Text="{Binding Cost}"/>

            <TextBlock Text="Длительность (в секундах):"/>
            <TextBox Name="tbDuration" Text="{Binding DurationInSeconds}"/>

            <TextBlock Text="Скидка (%):"/>
            <TextBox Name="tbDiscount" Text="{Binding Discount}"/>

            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Gray" BorderThickness="0.5">
                    <Image x:Name="img" Width="100" Height="100" Source="{Binding ImgPath}"/>
                </Border>
                <StackPanel Orientation="Vertical">
                    <Button x:Name="btnEnterImage" Content="Выбрать фото" Click="btnEnterImage_Click"/>
                    <Button x:Name="btnClearImage" Content="Убрать фото" Click="btnClearImage_Click"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Описание:"/>
            <TextBox Name="tbDescription" Text="{Binding Description}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Сохранить" Margin="10" Click="btnSave_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" Margin="10" Visibility="Collapsed" Click="btnDelete_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
