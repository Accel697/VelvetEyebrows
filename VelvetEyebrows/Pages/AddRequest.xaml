<Page x:Class="VelvetEyebrows.Pages.AddRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VelvetEyebrows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRequest">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <TextBlock Text="Клиент:"/>
            <ComboBox Name="cbClient" SelectedValuePath="ID" DisplayMemberPath="FullName" SelectedValue="{Binding ClientID}"/>
            
            <TextBlock Text="Услуга"/>
            <ComboBox Name="cbService" SelectedValuePath="ID" DisplayMemberPath="ServiceData" SelectedValue="{Binding ServiceID}" SelectionChanged="cbService_SelectionChanged"/>
            
            <TextBlock Text="Дата:"/>
            <DatePicker Name="dpDate" SelectedDate="{Binding DateStart}" SelectedDateChanged="dpDate_SelectedDateChanged"/>
            
            <TextBlock Text="Время начала:"/>
            <TextBox Name="tbStartTime" Text="{Binding StartTime, StringFormat='HH:mm'}" SelectionChanged="tbTime_SelectionChanged"/>

            <TextBlock Text="Время окончания:"/>
            <TextBlock Name="tblEndTime"/>

            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
